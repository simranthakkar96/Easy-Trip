<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Package.Main_Surat">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/city1"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Day 1:"
                    android:textSize="18dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="#000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15 May 2018"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:textSize="17dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:id="@+id/image_view"
                            android:src="@drawable/place1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Subhash Chandra\n Bose Aquarium"
                            android:layout_below="@+id/image_view"
                            android:id="@+id/name"
                            android:layout_marginTop="5dp"
                            android:textColor="#000"
                            android:layout_marginBottom="5dp"
                            android:textSize="18dp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="8sp"
                            android:autoSizeMaxTextSize="15sp"/>

                    </RelativeLayout>

                </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Day 2:"
                        android:textSize="18dp"
                        android:layout_marginLeft="3dp"
                        android:textColor="#000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="16 May 2018"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:textSize="17dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/recyclerView"
                            android:orientation="horizontal">

                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Information :"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textSize="18dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="18dp"
                android:text="Phone Number : 9899090890 \n\t\t\t \t\t\t\t\t\t\t\t\t\t\t\t9989667678\n"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="18dp"
                    android:text="Name : Akshar Travels \n\nAddress: 82, Surat - Kamrej Hwy, Ambicka Nagar Society, Luhar Faliya, Ishwer Krupa Society, Nana Varachha, Surat, Gujarat 395006"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>